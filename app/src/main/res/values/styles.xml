<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="TextField">
        <item name="android:background">@drawable/textfield</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingBottom">@dimen/margin_small</item>
        <item name="android:paddingTop">@dimen/margin_small</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/regular_size</item>
    </style>

    <style name="TextView.H1">
        <item name="android:textSize">@dimen/h1_size</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextView.H2">
        <item name="android:textSize">@dimen/h2_size</item>
    </style>

    <style name="TextView.H3">
        <item name="android:textSize">@dimen/h3_size</item>
    </style>

    <style name="TextView.H4">
        <item name="android:textSize">@dimen/h4_size</item>
    </style>

    <style name="TextView.H1.Toolbar">
        <item name="android:textSize">@dimen/toolbar_size</item>
    </style>

    <style name="TextView.Message">
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:layout_marginTop">@dimen/margin_standard</item>
        <item name="android:layout_marginBottom">@dimen/margin_standard</item>
    </style>

    <style name="TextView.Message.Received">
        <!--<item name="android:background">@drawable/item_chat_message_received_background</item>-->
        <item name="android:background">@drawable/item_chat_message_sent_background</item>
        <!--<item name="android:textColor">@android:color/white</item>-->
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_very_large</item>
    </style>

    <style name="TextView.Message.Sent">
        <!--<item name="android:background">@drawable/item_chat_message_sent_background</item>-->
        <item name="android:background">@drawable/item_chat_message_received_background</item>

        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:layout_marginStart">@dimen/margin_very_large</item>
    </style>

    <style name="Chip">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">@drawable/chip</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:padding">@dimen/margin_standard</item>
        <item name="android:textSize">@dimen/regular_size</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="fontFamily">@font/lato</item>
        <item name="android:textStyle">bold</item>
        <item name="android:minHeight">@dimen/min_button_height</item>
    </style>

    <style name="Button.Primary">
        <item name="android:textStyle">normal</item>
        <item name="android:background">@drawable/button_primary</item>
        <item name="android:textColor">@color/button_primary</item>
    </style>

    <style name="Button.Dark">
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/button_dark</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="Button.Danger">
        <item name="android:background">@drawable/button_danger</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Button.GoogleSignIn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/google_signin_button</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Box.Primary">
        <item name="android:background">@drawable/box_primary</item>
    </style>

    <style name="Box.Dark">
        <item name="android:background">@drawable/box_dark</item>
    </style>

    <style name="Box.DarkRounded">
        <item name="android:background">@drawable/box_dark_rounded</item>
    </style>

    <style name="Box.ItemReminderActiveContent">
        <item name="android:background">@drawable/box_reminder_content</item>
    </style>

    <style name="Box.ItemReminderActiveAction">
        <item name="android:background">@drawable/box_reminder_action</item>
    </style>

    <style name="Radio">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="fontFamily">@font/lato</item>
    </style>

    <style name="TextBox">
        <item name="android:background">@drawable/text_box</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="TextBoxText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textSize">@dimen/h3_size</item>
        <item name="android:paddingStart">@dimen/margin_large</item>
        <item name="android:paddingEnd">@dimen/margin_large</item>
        <item name="android:paddingTop">@dimen/margin_vertical_textbox</item>
        <item name="android:paddingBottom">@dimen/margin_vertical_textbox</item>
    </style>

    <style name="TextBoxText.EditText">
        <item name="android:inputType">text</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="TextBoxText.Send">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/text_box_send</item>
    </style>

    <style name="TextView.H2.FragmentProfile">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
    </style>

    <style name="TextView.H4.FragmentProfile">
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>
</resources>
