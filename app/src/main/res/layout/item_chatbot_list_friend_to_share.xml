<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/item_chatbot_list_friend_to_share_profpic_size"
    android:layout_height="@dimen/item_chatbot_list_friend_to_share_card_height"
    android:layout_marginStart="@dimen/margin_large"
    android:background="@drawable/item_chatbot_list_background"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_item_chatbot_list_friend_to_share_profile_picture"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_chatbot_list_friend_to_share_profpic_size"
        android:contentDescription="@string/item_chatbot_list_friend_to_share_profpic_content_desc"
        app:roundBottomLeft="false"
        app:roundBottomRight="false"
        app:roundedCornerRadius="@dimen/item_chatbot_list_friend_to_share_background_radius"
        tools:src="@color/colorPrimary" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_item_chatbot_list_friend_to_share_name"
        style="@style/TextView"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:paddingBottom="@dimen/margin_standard"
        android:paddingEnd="@dimen/margin_large"
        android:paddingStart="@dimen/margin_large"
        android:paddingTop="@dimen/margin_standard"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/item_chatbot_list_friend_to_share"
        tools:text="Lingga Putra Permana" />

</LinearLayout>