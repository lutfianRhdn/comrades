<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid android:color="@color/colorBorder" />
            <corners
                android:bottomLeftRadius="@dimen/border_radius"
                android:bottomRightRadius="@dimen/border_radius" />
        </shape>
    </item>

    <item
        android:bottom="@dimen/border_size_layer_list"
        android:left="@dimen/border_size_layer_list"
        android:right="@dimen/border_size_layer_list">
        <shape>
            <solid android:color="@android:color/white" />
            <corners
                android:bottomLeftRadius="@dimen/border_radius"
                android:bottomRightRadius="@dimen/border_radius" />
        </shape>
    </item>
</layer-list>
